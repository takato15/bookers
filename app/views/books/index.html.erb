<body>
  <p id="notice"></p>
  <h1>Books</h1>
  <% @book.each do |book| %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", "/books/show" %></td>
        <td><%= link_to "Edit", "/books/edit" %></td>
        <td><%= link_to "Destroy", "/books/show" %></td>
      </tr>
    </tbody>

  </table>
  <% end %>

  <h2>New book</h2>
  <%= form_with model: Book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>

</body>